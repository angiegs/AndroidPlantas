        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.671"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <ImageView
        android:id="@+id/avatar3"
        android:layout_width="106dp"
